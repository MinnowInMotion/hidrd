@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/hidrd@-targets.cmake")

set_and_check(hidrd@_INCLUDE_DIRS "@PACKAGE_INCLUDE_INSTALL_DIR@")

if (LIBHIDRD_LIBRARIES AND LIBHIDRD_INCLUDE_DIRS)
  # in cache already

else (LIBHIDRD_LIBRARIES AND LIBHIDRD_INCLUDE_DIRS)
  find_path(LIBHIDRD_INCLUDE_DIR
    NAMES
    hidrd.h
    PATHS
      /usr/include
      /usr/local/include
      /opt/local/include
      /sw/include
	PATH_SUFFIXES
	  LIBHIDRD
  )

  find_library(LIBHIDRD_LIBRARY
    NAMES
      hidrd
    PATHS
      /usr/lib
      /usr/local/lib
      /opt/local/lib
      /sw/lib
  )

  set(LIBHIDRD_INCLUDE_DIRS
    ${LIBHIDRD_INCLUDE_DIR}
  )
  set(LIBHIDRD_LIBRARIES
    ${LIBHIDRD_LIBRARY}
)

  if (LIBHIDRD_INCLUDE_DIRS AND LIBHIDRD_LIBRARIES)
     set(LIBHIDRD_FOUND TRUE)
  endif (LIBHIDRD_INCLUDE_DIRS AND LIBHIDRD_LIBRARIES)

  if (LIBHIDRD_FOUND)
    if (NOT LIBHIDRD_FIND_QUIETLY)
      message(STATUS "Found LIBHIDRD:")
	  message(STATUS " - Includes: ${LIBHIDRD_INCLUDE_DIRS}")
	  message(STATUS " - Libraries: ${LIBHIDRD_LIBRARIES}")
    endif (NOT LIBHIDRD_FIND_QUIETLY)
  else (LIBHIDRD_FOUND)
    if (LIBHIDRD_FIND_REQUIRED)
      message(FATAL_ERROR "Could not find LIBHIDRD")
    endif (LIBHIDRD_FIND_REQUIRED)
  endif (LIBHIDRD_FOUND)

  # show the LIBHIDRD_INCLUDE_DIRS and LIBHIDRD_LIBRARIES variables only in the advanced view
  mark_as_advanced(LIBHIDRD_INCLUDE_DIRS LIBHIDRD_LIBRARIES)

endif (LIBHIDRD_LIBRARIES AND LIBHIDRD_INCLUDE_DIRS)